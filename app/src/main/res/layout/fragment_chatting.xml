<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:padding="20dp">

        <ImageView
            android:id="@+id/country_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/user" />

        <ImageView
            android:id="@+id/country_icon1"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/imatch" />
        <ImageView
            android:id="@+id/country_icon2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/khien" />


        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:autofillHints="emailAddress"
            android:background="@drawable/btn_confirm"
            android:hint="Tìm kiếm tương thích"
            android:inputType="textEmailAddress"
            android:padding="3dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:text="Tương hợp mới"
            android:textColor="@color/darkRed"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/country_icon3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="155dp"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/circle_blue_background" />
        <ImageView
            android:id="@+id/country_icon4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="155dp"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/circle_blue_background" />
        <ImageView
            android:id="@+id/country_icon5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="155dp"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/circle_blue_background" />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="155dp"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/circle_blue_background" />
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="230dp"
            android:text="Tin nhắn"
            android:textColor="@color/darkRed"
            android:textSize="18dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:padding="0dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="260dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/circle_blue_background" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="270dp"
                android:text="Username1"
                android:textColor="@color/darkRed"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="290dp"
                android:text="Đây là nội dung tin nhắn"
                android:textColor="@color/darkGray"
                android:textSize="14dp"
                android:textStyle="normal" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:padding="0dp">

            <ImageView
                android:id="@+id/country_icon6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="340dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/circle_blue_background" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="350dp"
                android:text="Username2"
                android:textColor="@color/darkRed"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="370dp"
                android:text="Đây là nội dung tin nhắn"
                android:textColor="@color/darkGray"
                android:textSize="14dp"
                android:textStyle="normal" />
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>




